<Window x:Class="Lab8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Menu Height="26" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Margin="0,-2,0,0">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="MenuItemOpen_Click"/>
                <MenuItem Header="Exit" Click="MenuItemExit_Click"/>
            </MenuItem>
        </Menu>
        <TreeView Margin="0,31,456,28" Name="TreeView1"/>
        <StatusBar Margin="0,411,0,0"/>
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Margin="0,0,10,28" Height="375" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="441">
            <TextBlock Name="FileContents" Margin="0,31,0,28" TextWrapping="WrapWithOverflow"/>
        </ScrollViewer>

    </Grid>
</Window>
